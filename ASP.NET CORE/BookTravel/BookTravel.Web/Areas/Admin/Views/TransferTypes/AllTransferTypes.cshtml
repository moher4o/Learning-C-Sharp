@model IEnumerable<TransferTypeViewModel>
@{
    ViewData["Title"] = "All Transfer Types";
}

<h2 style="color:azure;">All Transfer Types</h2>

<div>
    <a class="btn btn-success btn-group-lg" asp-controller="TransferTypes" asp-action="NewTransferType">Add New Transfer Type</a>
</div>
<br />
<div class="table-custom">
    <table class="table table-bordered table-hover table-custom">
        <thead>
            <tr class="text-color-azure">
                <th>
                    Title
                </th>
                <th>
                    Price
                </th>
                <th>
                    Max People Count
                </th>
                <th>
                    Is One Way
                </th>
                <th>
                    Actions
                </th>

            </tr>
        </thead>
        <tbody style="background-color:bisque">
            @foreach (var type in Model)
            {
                <tr>
                    <td>
                        @type.Title
                    </td>
                    <td>
                        @type.Price.ToString("f2")
                    </td>
                    <td>
                        @type.MaxPeopleCount.ToString()
                    </td>
                    <td>
                        @(type.IsOneWay ? "Yes" : "No")
                    </td>

                    <td>
                        <a class="btn btn-warning btn-sm" asp-controller="TransferTypes" asp-action="EditTransferType" asp-route-typeId="@type.Id">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-controller="TransferTypes" asp-action="DeleteTransferType" asp-route-typeId="@type.Id" asp-route-typeTitle="@type.Title">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

