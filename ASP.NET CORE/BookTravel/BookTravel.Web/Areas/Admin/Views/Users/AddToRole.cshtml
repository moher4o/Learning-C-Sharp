@model AddToRoleViewModel
@{
    ViewData["Title"] = "Add To Role";
}

<h2 style="color:azure;">Add To Role</h2>


<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input name="userId" asp-for="UserId" type="hidden" />
            <select name="role" asp-items="Model.Roles" class="form-control"></select>
            <br />
            <button type="submit" class="btn btn-success">Add to role</button>
        </form>
    </div>
</div>

