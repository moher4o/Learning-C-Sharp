@model DeletePhotoViewModel
@{
    ViewData["Title"] = "Delete Photo";
}

<h2>Are you sure you want to delete this photo?</h2>

<div class="row">
    <div class="col-md-2">
        <form method="post" asp-controller="Manage" asp-action="DestroyPhoto" asp-route-photopath="@Model.Photo">
            @*<a asp-controller="Manage" asp-action="DestroyPhoto" asp-route-photopath="@Model.Photo" class="btn btn-danger">Yes</a>*@
            <input type="submit" class="btn btn-danger form-control" value="Yes" />
        </form>
    </div>
    <div class="col-md-2">
        <a asp-controller="Manage" asp-action="Photos" asp-route-photopath="@Model.Photo" class="btn btn-info form-control">No</a>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

